    },
    "candidate": {
      "type": "belongsTo",
      "model": "candidate",
      "foreignKey": "candidateId"
    },
    "grades": {
      "type": "hasOne",
      "model": "grade",
      "foreignKey": "answerId"
    }
  },
  "acls": [],
  "methods": {}

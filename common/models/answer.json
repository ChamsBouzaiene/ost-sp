    "validateUpsert": true
  },
  "properties": {
    "answer": {
      "type": "string",
      "required": true
    },
    "assessmentId": {
      "type": "number"
    },
    "candidateId": {
      "type": "number"
    }
  },

  "scope": {
    "include": "grades"   
  },


  "validations": [],
  "relations": {
    "assesment": {
      "type": "belongsTo",
